generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  whiteId   String
  whiteName String
  blackId   String?
  blackName String?
  
  fen       String
  moves     String[]
  status    String   // 'waiting', 'in-progress', 'completed'
  result    String?  // 'white', 'black', 'draw', 'stalemate'
}

model Agent {
  id        String   @id
  name      String
  elo       Int      @default(1200)
  matches   Int      @default(0)
  wins      Int      @default(0)
  losses    Int      @default(0)
  draws     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
